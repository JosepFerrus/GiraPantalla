<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.josep.girapantalla.MainActivity">

    <TextView
        android:text="@string/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/Nom"
        android:layout_weight="1" />


    <Button
        android:text="@string/enviar_dades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/sexe"
        android:textSize="24dp"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:id="@+id/genere"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Nombre"
        android:layout_below="@+id/Nom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Genero"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp">


        <RadioButton
            android:text="@string/femella"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Genero3"
            android:layout_above="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_weight="1" />

        <RadioButton
            android:text="@string/mascle"
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Genero2"
            android:layout_weight="1"
            android:layout_marginEnd="35dp"
            android:layout_below="@+id/Genero"
            android:layout_toStartOf="@+id/button" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frase"
            android:textSize="18sp"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RadioGroup>

</RelativeLayout>
